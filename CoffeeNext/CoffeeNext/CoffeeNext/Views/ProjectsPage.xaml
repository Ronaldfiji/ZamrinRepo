        <ListView
        IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
        ItemsSource="{Binding Projects}"
        RefreshCommand="{Binding RefreshCommand}"
        SelectionMode="Single"
        CachingStrategy="RecycleElement"
        SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
        Style="{StaticResource CoffeeListView}"      
        HasUnevenRows="True"
        RefreshControlColor="Red"
        SeparatorVisibility="Default"            
            BackgroundColor="{AppThemeBinding 
                        Dark={StaticResource WindowBackgroundColorDark}, 
                        Light={StaticResource WindowBackgroundColor}}"
       >
                <!-- IsPullToRefreshEnabled="True" -->
            
                <ListView.ItemTemplate>
                <DataTemplate  x:DataType="models:Projects">
                    <ViewCell>

                            <ViewCell.ContextActions>
                                <MenuItem
                            Command="{Binding Source={x:Reference MyProjectPage}, Path=BindingContext.DeleteCommand}"
                            CommandParameter="{Binding .}"
                            IsDestructive="True"
                            Text="Delete" />
                            </ViewCell.ContextActions>


                            <Grid Padding="4">
                                <Frame Style="{StaticResource CoffeeCard}">
                                <StackLayout Orientation="Horizontal">

                                      <!--  <StackLayout MinimumWidthRequest="50">
                                    <Label
                                        FontSize="Medium"
                                        Text="{Binding Code}"
                                        VerticalOptions="FillAndExpand"   LineBreakMode="CharacterWrap" />
                                        </StackLayout>
                                    -->

                                        <FlexLayout Direction="Column" WidthRequest="60"
            AlignItems="Center"
            JustifyContent="SpaceEvenly">
                                            <Label
                                        FontSize="Medium" 
                                        Text="{Binding Code}" 
                                        VerticalOptions="FillAndExpand"   LineBreakMode="CharacterWrap" />

                                        </FlexLayout>

                                        <StackLayout VerticalOptions="Center" >
                                        <Label
                                        FontSize="Medium"
                                        FontAttributes="Bold"
                                        Text="{Binding ProjectName}"
                                        VerticalOptions="Center" MaxLines="2" LineBreakMode="TailTruncation"/>
                                        <Label
                                        FontSize="Medium"
                                        Text="{Binding Description}"
                                        VerticalOptions="Center" MaxLines="2" LineBreakMode="TailTruncation"/>
                                        <Label
                                        FontSize="Small"
                                        Text="{Binding Code}"
                                        VerticalOptions="Center" />
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
                <ListView.Behaviors>
                    <xct:EventToCommandBehavior
                Command="{Binding SelectedCommand}"
                EventArgsConverter="{StaticResource ItemSelectedEventArgsConverter}"
                EventName="ItemSelected" />
                </ListView.Behaviors>
            
                <ListView.GroupHeaderTemplate>
                    <DataTemplate x:DataType="{x:Null}">
                        <ViewCell>
                            <StackLayout Padding="20,0">
                                <Label Style="{StaticResource LabelMedium}" Text="{Binding Key}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>

                <ListView.Header>
                <StackLayout Orientation="Horizontal">
                    <Label
                    Margin="20"
                    FontFamily="AC"
                    HorizontalOptions="Center"                    
                    Text="Coffees of the World">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Label.GestureRecognizers>
                        </Label>

                    
                    </StackLayout>
            </ListView.Header>
            <ListView.Footer>
                <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Button
                    Command="{Binding LoadMoreCommand}"
                    Style="{StaticResource ButtonOutline}"
                    Text="Load More" />
                    </StackLayout>
            </ListView.Footer>
        </ListView>
        
        

        </StackLayout>
        
    </ContentPage.Content>
